<% include ./partials/header %>

<h2 class="display-4 text-center">List of Events</h2>

<div class="container">
  <div class="row">
    
      <% events.forEach(function(event){ %>
        <div class="col-md-4">
          <div class="card m-2" style="width: 18rem; height: 200px;">
            <div class="card-body m-2">
              <h5 class="card-title "><%= event.title %></h5>
              <p class="card-text">Click on Details to check the details !</p>
              <a style="margin-top: 20px;" href="/events/<%= event._id %>" class="btn btn-primary">Details</a>
            </div>
          </div>
    </div>
    <% }) %>

    </div>
    <a href="/events/new" style="text-decoration: none;"><button type="button" name="button"  class="btn btn-success btn-block mt-2"  >Add New Event</button></a>

   
</div>

