<% include ./partials/header %>

<h1 class="display-4 text-center">Edit <%= event.title %></h1>
<div class="row mt-5">
  <div class=" jumbotron col-md-6 m-auto">

<form class="col-md-6" action="/events/<%= event._id %>?_method=PUT" method="post">
  <div class="form-group">
  <label for="title">Title:</label>
  <input class="form-control" type="text" name="event[title]" value="<%= event.title %>">
</div>
<div class="form-group">

  <label for="date">Date:</label>
  <input  class="form-control" type="date" name="event[date]" value="<%= event.date %>">
</div>
  <div class="form-group">

  <label for="organiser">Organiser:</label>
  <input  class="form-control" type="text" name="event[organiser]" value="<%= event.organiser %>">
  </div>
  <div class="form-group">

  <label for="location">Location:</label>
  <input class="form-control" type="text" name="event[location]" value="<%= event.location %>">
  </div>
  <div class="form-group">

  <label for="description">Description:</label>
  <input  class="form-control" type="text" name="event[description]" value="<%= event.description %>">
  </div>
  <div class="form-group">

  <label for="ticket_price">Ticket Price:($)</label>
  <input  class="form-control" type="text" name="event[ticket_price]" value="<%= event.ticket_price %>">
</div>
<button  class="btn btn-secondary bg-success" style="width: 150px; margin-right: 170px; border: none;" type="submit" name="button">Save changes</button>

</form>
</div>
</div>


<% include ./partials/footer %>
